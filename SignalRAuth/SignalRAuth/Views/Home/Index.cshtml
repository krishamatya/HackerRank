
@using Microsoft.AspNetCore.Identity
@using SignalRAuth.Areas.Identity.Data
@{
    ViewData["Title"] = "Home Page";
}

@inject UserManager<SignalRAuthUser> UserManager
<div class="container">
    <div class="row p-1">
        <div class="col-1">User</div>
        <div class="col-5"><input type="text" id="userInput" value="@UserManager.GetUserAsync(User).Result.FirstName" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-5">
        <textarea class="textareas" id="messageInput"></textarea></div>
       
    </div>
    <div class="row p-1">
        <div class="col-6 text-end">
            <input type="button" id="sendButton" value="Send Message" />
        </div>
    </div>

    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/message.js"></script>